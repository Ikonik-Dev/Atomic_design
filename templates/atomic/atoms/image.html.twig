{#
    Atom: Image
    Description: Image réutilisable avec support responsive
    Props:
    - src: URL de l'image
    - alt: Texte alternatif
    - width: Largeur de l'image
    - height: Hauteur de l'image
    - class: Classes CSS supplémentaires
    - lazy: Chargement paresseux (true/false)
#}

{% set imageClass = 'image' %}
{% set imageClass = imageClass ~ ' ' ~ (class|default('')) %}

<img 
    src="{{ src|default('https://picsum.photos/400/300') }}" 
    alt="{{ alt|default('Image') }}"
    class="{{ imageClass }}"
    {% if width is defined %}width="{{ width }}"{% endif %}
    {% if height is defined %}height="{{ height }}"{% endif %}
    {% if lazy is defined and lazy %}loading="lazy"{% endif %}
    {% if attributes is defined %}{{ attributes|raw }}{% endif %}
/>
